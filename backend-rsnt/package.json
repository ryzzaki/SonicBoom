{
  "name": "backend-rsnt",
  "version": "0.0.1",
  "description": "Resonate Backend Server",
  "author": "Cuong Nguyen <cuong.nugi@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NODE_ENV=production nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/src/main.js",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "db:setup": "(rimraf ormconfig.json || :) && ts-node -r tsconfig-paths/register scripts/generate-typeorm-config.ts",
    "db:generate": "yarn typeorm migration:generate -n",
    "db:migrate": "yarn typeorm migration:run",
    "preprod:typeorm": "(rimraf ormconfig.json || :) && node dist/scripts/generate-typeorm-config.js",
    "prestart:prod": "yarn preprod:typeorm && node ./node_modules/typeorm/cli.js migration:run",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/cli": "7.4.1",
    "@nestjs/common": "7.4.2",
    "@nestjs/core": "7.4.2",
    "@nestjs/jwt": "7.1.0",
    "@nestjs/passport": "7.1.0",
    "@nestjs/platform-express": "7.4.2",
    "@nestjs/platform-socket.io": "7.4.2",
    "@nestjs/serve-static": "2.1.3",
    "@nestjs/typeorm": "7.1.0",
    "@nestjs/websockets": "7.4.2",
    "axios": "0.19.2",
    "cheerio": "^1.0.0-rc.3",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.0-rc.0",
    "cookie-parser": "1.4.5",
    "dotenv": "8.2.0",
    "express-rate-limit": "5.1.1",
    "helmet": "3.22.0",
    "lodash": "4.17.19",
    "nestjs-redis": "1.2.8",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "passport-spotify": "1.1.0",
    "pg": "7.18.2",
    "qs": "6.9.3",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.0",
    "rxjs": "6.5.3",
    "typeorm": "0.2.24"
  },
  "devDependencies": {
    "@nestjs/schematics": "7.0.1",
    "@nestjs/testing": "7.4.2",
    "@types/express": "4.17.1",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.5",
    "@types/socket.io": "2.1.11",
    "@types/supertest": "2.0.10",
    "cross-env": "7.0.2",
    "jest": "24.9.0",
    "prettier": "2.0.5",
    "supertest": "4.0.2",
    "ts-jest": "26.4.3",
    "ts-loader": "6.1.1",
    "ts-node": "8.4.1",
    "tsconfig-paths": "3.9.0",
    "tslint": "5.20.0",
    "typescript": "4.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
